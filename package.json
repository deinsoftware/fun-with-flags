{
  "name": "fun-with-flags",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "ts:check": "tsc --noEmit",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "styles": "stylelint \"**/*.css\"",
    "styles:fix": "stylelint \"**/*.css\" --fix",
    "prepare": "husky install",
    "test": "vitest --run --reporter verbose",
    "test:w": "vitest",
    "test:ui": "vitest --ui",
    "test:c": "vitest run --coverage",
    "test:cw": "vitest watch --coverage",
    "prisma:pull": "prisma db pull --force",
    "prisma:client": "prisma generate",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "5.1.1",
    "@types/node": "20.4.9",
    "@types/react": "18.2.19",
    "@types/react-dom": "18.2.7",
    "eslint": "8.46.0",
    "eslint-config-next": "13.4.13",
    "lucide-react": "0.263.1",
    "minireset.css": "0.0.7",
    "next": "13.4.13",
    "next-auth": "4.22.5",
    "react": "18.2.0",
    "react-country-flag": "3.1.0",
    "react-dom": "18.2.0",
    "typescript": "5.1.6"
  },
  "swpm": "npm",
  "volta": {
    "node": "18.16.0",
    "npm": "9.5.1"
  },
  "devDependencies": {
    "@testing-library/dom": "9.3.1",
    "@testing-library/jest-dom": "5.17.0",
    "@testing-library/react": "14.0.0",
    "@testing-library/user-event": "14.4.3",
    "@vitest/coverage-v8": "0.34.1",
    "autoprefixer": "10.4.14",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-jest-dom": "5.0.2",
    "eslint-plugin-testing-library": "5.11.1",
    "htmlhint": "1.1.4",
    "husky": "8.0.3",
    "jsdom": "22.1.0",
    "lint-staged": "13.2.3",
    "postcss": "8.4.27",
    "postcss-cli": "10.1.0",
    "postcss-nesting": "12.0.1",
    "postcss-syntax": "0.36.2",
    "prettier": "3.0.1",
    "prisma": "5.1.1",
    "stylelint": "15.10.2",
    "stylelint-config-idiomatic-order": "9.0.0",
    "stylelint-config-standard": "34.0.0",
    "vitest": "0.34.1",
    "vitest-mock-extended": "1.2.0"
  },
  "lint-staged": {
    "*.css": "stylelint \"**/*.css\" --fix",
    "*.--check": "prettier --write"
  }
}