generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type EventsTimeZoneList {
  countryCode String
  name        String
}

type EventsTimeZoneOrigin {
  countryCode String
  date        DateTime @db.Date
  name        String
}

type EventsTimeZone {
  list   EventsTimeZoneList[]
  origin EventsTimeZoneOrigin
}

model Events {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  description String
  img         String?
  lang        String
  name        String
  tags        String[]
  timeZone    EventsTimeZone
  createdAt   DateTime       @default(now())
  updatedAt   DateTime?
  url         String?

  author Users  @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}

type TimeZonesList {
  capital   Boolean
  dst       Boolean
  initial   String
  offset    Float
  zoneNames String[]
}

model TimeZones {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  countryCode String
  timeZone    TimeZonesList[]
}

type UsersProvidersAuth {
  image String
  name  String
  user  String
}

type UsersProviders {
  auth UsersProvidersAuth
  name String
}

model Users {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  providers UsersProviders[]
  userName  String           @unique
  Events    Events[]
}
