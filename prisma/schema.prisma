generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type EventsTimeZoneList {
  countryCode String
  name        String
}

type EventsTimeZoneOrigin {
  countryCode String
  name        String
  timestamp   DateTime @db.Date
}

type EventsTimeZone {
  list   EventsTimeZoneList[]
  origin EventsTimeZoneOrigin
}

model Events {
  id          String         @id @default(auto()) @map("_id") @db.ObjectId
  description String
  img         String
  lang        String
  name        String
  tags        String[]
  timeZone    EventsTimeZone
  timestamp   DateTime       @default(now())
  url         String
  userName    String
}

type TimeZonesList {
  capital   String
  initial   String
  offset    Float
  dst       Boolean
  zoneNames String[]
}

model TimeZones {
  id          String          @id @default(auto()) @map("_id") @db.ObjectId
  countryCode String
  timeZone    TimeZonesList[]
}
